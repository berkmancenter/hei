<div class="row">
  <div class="span12">
    <div class="page-header">
      <h1>Organizations</h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="span12">
      <% if Hei::Application.config.hei[ 'allow_new_orgs' ] %>
        <%= link_to t( 'organizations_new' ), new_organization_path, class: 'btn btn-primary' %>
      <% end %>
  </div>
</div>

<ul class="organization-cards thumbnails">

<% @organizations.each do |organization| %>
  <%= render partial: 'organizations/organization_card', locals: { organization: organization } %>
<% end %>

</ul>


