<li class="span4 project" id="project-<%= project.id %>">
  <div class="thumbnail">
    <div class="caption">
      <h3><%= project.title %></h3>
      <% unless project.description.blank? %>
        <p class='less'><%= truncate(project.description,:separator => ' ', :length => 100) %></p>
        <p class='more'><%= project.description %></p>
      <% end %>
      <% @primary_facets.each do|pf| %>
        <p class="more facet_container"><span class="facet facet-<%= pf.id %>"><%= pf.name %></span> <%= raw project.taggings.reject{|tg| tg.context != pf.context}.collect{|tg| "<span class='badge'>#{tg.tag.name}</span>"}.join(' ') %></p>
      <% end %>
      <p>
      <%= link_to(raw('<span class="state">more</span> <i class="icon-plus"></i>'), '#', :class => 'btn more_toggle') %>
      <%= link_to('Project Page', project_path(project), :class => 'btn btn-primary') %>
      </p>
    </div>
  </div>
</li>
