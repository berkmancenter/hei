<% provide :title, @project.title %>

<div class="row">
  <div class="span9">
    <h1><%= @project.title %></h1>
    <p class="description"><%= @project.description %></p>
  </div>

  <% if not @project.tags.nil? %>
  <div class="span3 facet_list">
    <h2>Tags</h2>

    <ul>
      <% @project.tags.each do |t| %>
        <li class="facet_header"><%= t.name %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
</div>
